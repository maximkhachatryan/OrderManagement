@model OrderMgmnt.Web.Areas.Admin.Models.AdminVendorDetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using OrderMgmnt.Web.Helpers
@using OrderMgmnt.DAL.Entities

<h1>Գործընկեր</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Code)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BrandName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BrandName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber1)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber1)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber2)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber2)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InstagramLink)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InstagramLink)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WebsiteLink)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WebsiteLink)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VendorWalletAmount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VendorWalletAmount)
        </dd>
        <dt class="col-sm-2">
            <span>@Html.DisplayNameFor(model => model.Addresses)</span>
            <br />
            <span>
                <a asp-controller="AdminVendorAddress" asp-action="Create" asp-route-vendorId="@Model.Id">
                    (նոր հասցե)
                </a>
            </span>

        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var address in Model.Addresses)
                {
                    <li>
                        <a asp-controller="AdminVendorAddress"
                           asp-action="Edit"
                           asp-route-id="@address.Id">
                            @($"ք․ Երևան, {EnumHelper<VendorAddress.AdministrativeDistrict>.GetDisplayValue(address.District)}, {address.AddressInfo}")
                        </a> | 
                        <a asp-controller="AdminVendorAddress"
                           asp-action="Delete"
                           asp-route-id="@address.Id"
                           style="color: red"
                           >Հեռացնել</a>
                    </li>
                }
            </ul>
            
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Խմբագրել</a> |
    <a asp-action="Index">Վերադառնալ</a>
</div>
