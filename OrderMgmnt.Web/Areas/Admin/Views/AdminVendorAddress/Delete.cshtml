@model OrderMgmnt.DAL.Entities.VendorAddress

@{
    ViewData["Title"] = "Գործընկերոջ հասցե։ Հեռացնել";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Գործընկերոջ հասցե։ Հեռացնել</h1>

<h3>Վստահ եք, որ ցանկանում եք հեռացնել գործընկերոջ հասցեն?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.District)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.District)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AddressInfo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AddressInfo)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Հեռացնել" class="btn btn-danger" /> |
    </form>

    <a asp-controller="AdminVendor" asp-action="Details" asp-route-id="@ViewBag.VendorId">Վերադառնալ</a>
</div>
